{
  "extends": [
    "@codeyourfuture/standard",
    "plugin:@typescript-eslint/stylistic",
    "plugin:@typescript-eslint/strict"
  ],
  "ignorePatterns": [
    "lib/"
  ],
  "overrides": [
    {
      "files": [
        "src/**/*.test.ts"
      ],
      "extends": [
        "plugin:jest/recommended"
      ],
      "rules": {
        "@typescript-eslint/no-non-null-assertion": "off"
      }
    }
  ],
  "root": true
}
